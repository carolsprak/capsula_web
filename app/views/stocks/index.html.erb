<p id="notice"><%= notice %></p>

<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to 'Listagem', stocks_path %></li>
  <li><%= link_to 'Novo Produto', new_stock_path %></li>
</ul>

<h2>Produtos</h2>

<table class="table">
  <thead>
    <tr>
      <th>Bebida</th>
      <th>Quantidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  	<% @stocks.each do |stock| %>
		<tr>
			<td><% if !stock.drink.blank? %><%= stock.drink.drink_type %><%else%>Sem produto<%end%></td>
			<td><%= stock.quantity %></td>			
			<td>
				<%= link_to stock, class: 'btn btn-primary btn-xs' do %>
					<i class="glyphicon glyphicon-list-alt"></i> Exibir
				<% end %>
			</td>
			<td>
				<%= link_to edit_stock_path(stock), class: 'btn btn-info btn-xs' do %>
					<i class="glyphicon glyphicon-pencil"></i> Alterar
				<% end %>
			</td>
			<td>
				<%= link_to stock, method: :delete, data: { confirm: 'VocÃª realmente deseja remover o Produto?' }, class: 'btn btn-danger btn-xs' do %>
					<i class="glyphicon glyphicon-trash"></i> Remover
				<% end %>
			</td>
		</tr>
	<% end %>		
		<tr>
			
		</tr>
  </tbody>
</table>

<br>

<%= link_to new_stock_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> Novo
<% end %>

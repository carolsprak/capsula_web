<%= form_for(@stock, html: {class: 'form-horizontal'}) do |f| %>
  <% if @stock.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@stock.errors.count, "erro") %> encontrados:</h2>
      <ul>
      <% @stock.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label "Bebida", class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">
		<%= f.select :drink_id, @drinks.collect { |drink| [drink.drink_type, drink.id] }, class: 'form-control' %>
	</div>
  </div>
  <div class="field form-group">
    <%= f.label "Quantidade", class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :quantity, class: 'form-control' %>
  </div>
  </div>
    
  <div class="actions form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<%= f.submit "Salvar", class: 'btn-sm' %>
	</div>
  </div>
<% end %>

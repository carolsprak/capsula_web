<p id="notice"><%= notice %></p>

<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to 'Listagem', brands_path %></li>
  <li><%= link_to 'Nova Marca', new_brand_path %></li>
</ul>

<h2>Marcas de Café</h2>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  	<% @brands.each do |brand| %>
		<tr>
			<td><%= brand.name %></td>
			<td><%= brand.description %></td>
			<td>
				<%= link_to brand, class: 'btn btn-primary btn-xs' do %>
					<i class="glyphicon glyphicon-list-alt"></i> Exibir
				<% end %>
			</td>
			<td>
				<%= link_to edit_brand_path(brand), class: 'btn btn-info btn-xs' do %>
					<i class="glyphicon glyphicon-pencil"></i> Alterar
				<% end %>
			</td>
			<td>
				<%= link_to brand, method: :delete, data: { confirm: 'Você realmente deseja remover a Marca?' }, class: 'btn btn-danger btn-xs' do %>
					<i class="glyphicon glyphicon-trash"></i> Remover
				<% end %>
			</td>
		</tr>
	<% end %>		
		<tr>
			
		</tr>
  </tbody>
</table>

<br>

<%= link_to new_brand_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> Novo
<% end %>

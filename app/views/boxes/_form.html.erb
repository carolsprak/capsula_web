<%= form_for(@box, html: {class: 'form-horizontal'}) do |f| %>
  <% if @box.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@box.errors.count, "erro") %> encontrados:</h2>
      <ul>
      <% @box.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label "Marca", class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">
		<%= f.select :brand_id, @brands.collect { |brand| [brand.name, brand.id] }, class: 'form-control' %>
	</div>
  </div>
  <div class="field form-group">
    <%= f.label "Limite da Caixa", class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.select :box_limite, [["10",10], ["16",16]], prompt: "Selecione", class: "form-control" %>
  </div>
  </div>
  <div class="field form-group">
    <%= f.label "PreÃ§o", class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">
		R$ <%= f.text_field :box_price, class: 'form-control' %>
	</div>
  </div>
  <div class="actions form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<%= f.submit "Salvar", class: 'btn-sm' %>
	</div>
  </div>
<% end %>

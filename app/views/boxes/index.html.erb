<p id="notice"><%= notice %></p>

<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to 'Listagem', boxes_path %></li>
  <li><%= link_to 'Nova Caixa', new_box_path %></li>
</ul>

<h2>Caixas de Cápsulas</h2>

<table class="table">
  <thead>
    <tr>
      <th>Marca</th>
      <th>Quantidade de Cápsulas</th>
      <th>Preço</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  	<% @boxes.each do |box| %>
		<tr>
			<td><% if !box.brand.blank? %><%= box.brand.name %><%else%>Sem marca<%end%></td>
			<td><%= box.box_limite %></td>
			<td><%= box.box_price %></td>
			<td>
				<%= link_to box, class: 'btn btn-primary btn-xs' do %>
					<i class="glyphicon glyphicon-list-alt"></i> Exibir
				<% end %>
			</td>
			<td>
				<%= link_to edit_box_path(box), class: 'btn btn-info btn-xs' do %>
					<i class="glyphicon glyphicon-pencil"></i> Alterar
				<% end %>
			</td>
			<td>
				<%= link_to box, method: :delete, data: { confirm: 'Você realmente deseja remover a Caixa?' }, class: 'btn btn-danger btn-xs' do %>
					<i class="glyphicon glyphicon-trash"></i> Remover
				<% end %>
			</td>
		</tr>
	<% end %>		
		<tr>
			
		</tr>
  </tbody>
</table>

<br>

<%= link_to new_box_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> Novo
<% end %>

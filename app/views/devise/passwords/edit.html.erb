<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2 class="text-center">Alterar Senha</h2>
    <br/>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render 'shared/devisemes' %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <% if @minimum_password_length %>
          <em>(mÃ­nimo de <%= @minimum_password_length %> caracteres)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "Nova Senha", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirme a Nova Senha", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Alterar Senha", class: "btn btn-normal btn-block" %>
      </div>
    <% end %>
  </div>
</div>

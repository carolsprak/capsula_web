<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2 class="text-center">Cadastre-se</h2>
    <br/>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <!--%= render 'shared/devisemes' %-->

      <div class="form-group">
        <%= f.text_field :fullname, autofocus: true, placeholder: "Nome Completo", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "E-mail", class: "form-control" %>
      </div>

      <div class="form-group">
        <% if @minimum_password_length %>
        <em>(mÃ­nimo de <%= @minimum_password_length %> caracteres)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: "Senha", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirme a Senha", class: "form-control" %>
      </div>

      <br/>
      <br/>

      <div class="actions">
        <%= f.submit "Cadastrar", class: "btn btn-normal btn-block" %>
      </div>
    <% end %>
    <hr/>
    <%= render "devise/shared/links" %>
  </div>
</div>

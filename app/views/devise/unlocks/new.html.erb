<h2>Reenviar Instruções para Desbloqueio</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= render 'shared/devisemes' %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, placeholder: "E-mail", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Reenviar instruções para desbloqueio", class: "btn btn-normal btn-block"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>

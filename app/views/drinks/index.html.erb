<p id="notice"><%= notice %></p>

<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to 'Listagem', drinks_path %></li>
  <li><%= link_to 'Nova Bebida', new_drink_path %></li>
</ul>

<h2>Tipos de Bebidas</h2>

<table class="table">
  <thead>
    <tr>
      <th>Marca</th>
      <th>Tipo</th>
      <th>Categoria</th>
      <th>Descrição</th>
      <th>Número de Cápsulas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  	<% @drinks.each do |drink| %>
		<tr>
			<td><% if !drink.brand.blank? %><%= drink.brand.name %><%else%>Sem marca<%end%></td>
			<td><%= drink.drink_type %></td>
			<td><%= drink.drink_category %></td>
			<td><%= drink.description %></td>
			<td><%= drink.qt_capsule %></td>
			<td>
				<%= link_to drink, class: 'btn btn-primary btn-xs' do %>
					<i class="glyphicon glyphicon-list-alt"></i> Exibir
				<% end %>
			</td>
			<td>
				<%= link_to edit_drink_path(drink), class: 'btn btn-info btn-xs' do %>
					<i class="glyphicon glyphicon-pencil"></i> Alterar
				<% end %>
			</td>
			<td>
				<%= link_to drink, method: :delete, data: { confirm: 'Você realmente deseja remover a Bebida?' }, class: 'btn btn-danger btn-xs' do %>
					<i class="glyphicon glyphicon-trash"></i> Remover
				<% end %>
			</td>
		</tr>
	<% end %>		
		<tr>
			
		</tr>
  </tbody>
</table>

<br>

<%= link_to new_drink_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> Novo
<% end %>

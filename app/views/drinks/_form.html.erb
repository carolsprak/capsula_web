<%= form_for(@drink, html: {class: 'form-horizontal'}) do |f| %>
  <% if @drink.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@drink.errors.count, "erro") %> encontrados:</h2>
      <ul>
      <% @drink.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label "Marca", class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.select :brand_id, @brands.collect { |brand| [brand.name, brand.id] }, class: 'form-control' %>
  </div>
  </div>
  <div class="field form-group">
    <%= f.label "Tipo", class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :drink_type, class: 'form-control' %>
  </div>
  </div>
  <div class="field form-group">
    <%= f.label "Categoria", class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">		
    <%= f.select :drink_category, [["Café","Café"], ["Com Leite","Com Leite"], ["Com Chocolate","Com Chocolate"], ["Gelada","Gelada"], ["Chá","Chá"]], prompt: "Selecione", class: "form-control" %>
	</div>
  </div>
  <div class="field form-group">
    <%= f.label "Descrição", class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">
		<%= f.text_area :description, class: 'form-control' %>
	</div>
  </div>
  <div class="field form-group">
    <%= f.label "Número de Cápsulas", class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.select :qt_capsule, [["1",1], ["2",2]], prompt: "Selecione", class: "form-control" %>
  </div>
  </div>
  <div class="actions form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<%= f.submit "Salvar", class: 'btn-sm' %>
	</div>
  </div>
<% end %>
